# 服务器配置
PORT=5000

# MongoDB配置
MONGODB_URI=mongodb://localhost:27017/yee-note

# JWT配置
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# 文件上传配置
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=5242880

# 邮件配置 (可选)
EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# 安全配置
NODE_ENV=development